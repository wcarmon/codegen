{
  "$id": "https://wcarmon.com/schemas/codegen/protobuf-field.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "configuration for protocol buffer 3 fields",
  "properties": {
    "deprecated": {
      "type": "boolean"
    },
    "overrideTypeLiteral": {
      "description": "User defined type or standard protobuf type",
      "maxLength": 64,
      "type": "string"
    },
    "repeated": {
      "type": "boolean"
    },
    "repeatedItemSerde": {
      "$ref": "serde.schema.json",
      "description": "only for collections"
    },
    "serde": {
      "$ref": "serde.schema.json",
      "description": "for the field, might be a collection"
    }
  },
  "propertyNames": {
    "pattern": "^[$]?[A-Za-z_][A-Za-z0-9]*$"
  },
  "required": [],
  "title": "Protocol Buffers 3 field config",
  "type": "object"
}
