{
  "$id": "https://wcarmon.com/schemas/codegen/request.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "configuration for a single run of the code generator",
  "properties": {
    "$schema": {
      "format": "uri",
      "type": "string"
    },
    "allowOverride": {
      "type": "boolean"
    },
    "caseFormatForOutputFile": {
      "enum": [
        "LOWER_CAMEL",
        "LOWER_HYPHEN",
        "LOWER_UNDERSCORE",
        "UPPER_CAMEL",
        "UPPER_UNDERSCORE"
      ]
    },
    "entityConfigDirs": {
      "items": {
        "type": "string"
      },
      "maxItems": 256,
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "jvmContextClass": {
      "maxLength": 64,
      "minLength": 1,
      "type": "string"
    },
    "outputFileOrDirectory": {
      "maxLength": 250,
      "minLength": 1,
      "type": "string"
    },
    "outputFilenameTemplate": {
      "maxLength": 64,
      "minLength": 2,
      "type": "string"
    },
    "outputMode": {
      "enum": [
        "multiple",
        "single"
      ]
    },
    "package": {
      "maxLength": 250,
      "minLength": 0,
      "type": "string"
    },
    "templateURI": {
      "format": "uri",
      "maxLength": 250,
      "minLength": 1,
      "type": "string"
    }
  },
  "propertyNames": {
    "pattern": "^[$]?[A-Za-z_][A-Za-z0-9]*$"
  },
  "required": [
    "entityConfigDirs",
    "outputFileOrDirectory",
    "outputMode",
    "templateURI"
  ],
  "title": "Code generation request",
  "type": "object"
}
