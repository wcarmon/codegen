{
  "$id": "https://wcarmon.com/schemas/codegen/entity.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Entity, Struct, Table, ...",
  "properties": {
    "$schema": {
      "format": "uri",
      "type": "string"
    },
    "canCheckForExistence": {
      "type": "boolean"
    },
    "canCreate": {
      "type": "boolean"
    },
    "canDelete": {
      "type": "boolean"
    },
    "canExtend": {
      "type": "boolean"
    },
    "canFindById": {
      "type": "boolean"
    },
    "canList": {
      "type": "boolean"
    },
    "canUpdate": {
      "type": "boolean"
    },
    "createdTimestampFieldName": {
      "maxLength": 48,
      "minLength": 1,
      "pattern": "^[a-z][A-Za-z0-9]*$",
      "type": "string"
    },
    "documentation": {
      "items": {
        "maxLength": 160,
        "minLength": 0,
        "type": "string"
      },
      "maxItems": 24,
      "minItems": 0,
      "type": "array"
    },
    "extraImplements": {
      "items": {
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 0,
      "type": "array",
      "uniqueItems": true
    },
    "fieldUris": {
      "description": "referenced fields, file paths or classpaths",
      "items": {
        "maxLength": 255,
        "minLength": 4,
        "type": "uri"
      },
      "maxItems": 256,
      "minItems": 0,
      "type": "array",
      "uniqueItems": true
    },
    "fields": {
      "items": {
        "$ref": "field.schema.json"
      },
      "maxItems": 256,
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "indexes": {
      "items": {
        "items": {
          "maxLength": 48,
          "minLength": 1,
          "pattern": "^[a-zA-Z][A-Za-z0-9]*$",
          "type": "string"
        },
        "maxItems": 5,
        "minItems": 1,
        "type": "array",
        "uniqueItems": true
      },
      "maxItems": 16,
      "minItems": 0,
      "type": "array",
      "uniqueItems": true
    },
    "name": {
      "maxLength": 48,
      "minLength": 1,
      "pattern": "^[A-Z][A-Za-z0-9]*$",
      "type": "string"
    },
    "pkg": {
      "maxLength": 128,
      "type": "string"
    },
    "rdbms": {
      "$ref": "rdbms-table.schema.json"
    },
    "updatedTimestampFieldName": {
      "maxLength": 48,
      "minLength": 1,
      "pattern": "^[a-z][A-Za-z0-9]*$",
      "type": "string"
    }
  },
  "propertyNames": {
    "pattern": "^[$]?[A-Za-z_][A-Za-z0-9]*$"
  },
  "required": [
    "name",
    "$schema"
  ],
  "title": "Entity",
  "type": "object"
}
